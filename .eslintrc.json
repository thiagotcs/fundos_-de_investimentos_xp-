{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
      "plugin:prettier/recommended",
        "standard"

    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
      "prettier/prettier": "error",
      "indent": [ "error", 2 ],
      "semi": [1, "always"]
    }

}
